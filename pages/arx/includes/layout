# Page content
function page_head {
	print '<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="author" content="alex" />
	<meta name=viewport content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" href="/files/favicon.ico">'
	(( CSSV == 1 )) && print "\t<link rel=\"stylesheet\" type=\"text/css\" href=\"/${CSSF}\" />"
	if [[ -n $WTIT ]]; then
		print "\t<title>${WTIT}${FILETIT:+ | }${FILETIT}</title>"
	else
		print "\t<title>${FILETIT}</title>"
	fi
	print '</head>
<body>
	<nav>
                <div id="backlink">
                        <a href="https://cosmofox.net/">&#8617;</a>
                </div>
                <div id="logo">
                        <a href="/"><img src="/files/logo.png" alt="arx" ></a>
                </div>
                <div id="desc">
                        <p>…mmh, raspberries…</p>
                </div>
                <ul>
                       <li><a href="/blog/">blog</a></li>
                       <li><a href="/todo/">todo</a></li>
                       <li><a href="/about/">about</a></li>
                       <li><a href="/AP-with-rt8192cu-based-adapters/">AP with rt8192cu based adapters</a></li>
                       <li><a href="/multiple-hostapd-instances/">multiple hostapd instances</a></li>
                </ul>
        </nav>
        <div id="paper">
        <article>'
}

function page_foot {
	print '	</article>
        <footer>
                <div>
                        <a href="https://contact.cosmofox.net/">contact / Impressum</a>
                </div>
        </footer>
        </div>
\t<!-- Page generated by wswsh 1.2 / '"$(print ${SHELL##*/})"' - '"$(LC_ALL=C date)"' -->
</body>
</html>'
}

function gen_site_xml {
	print '<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>'"${WTIT}"'</title>
	<subtitle>feeds arent dead</subtitle>
	<link href="http://'${WURL}'/"/>
	<link type="application/atom+xml" rel="self" href="http://'${WURL}'/'${RSSDIR}'atom.xml"/>
	<updated>'"${RDAT}"'</updated>
	<author>
		<name>alex</name>
	</author>
	<id>http://'"${WURL}"'/</id>
'
}

function xml_content {
	print '\t<entry>
		<title>'"${FILETIT}"'</title>
		<link href="http://'${WURL}'/'${RSSTNOEXT}'.html"/>
		<id>http://'"${WURL}"'/'"${RSSTNOEXT}"'.html</id>
		<updated>'"${RDADAT}"'</updated>
		<summary>'"${RSSDES}"'</summary>
	</entry>
'
}
